<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_personjae"
    android:layout_margin="12dp"
    app:cardBackgroundColor="#3E1F39"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:contentPadding="4dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/item_image_personaje"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id: "
            android:textColor="@color/white"
            android:id="@+id/item_id_personaje"
            android:textStyle="bold"
            android:layout_toEndOf="@id/item_image_personaje"
            android:layout_toRightOf="@id/item_image_personaje"
            android:layout_alignParentTop="true"
            android:textSize="15sp"
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name: "
            android:textColor="@color/white"
            android:id="@+id/item_name_personaje"
            android:textStyle="bold"
            android:layout_toEndOf="@id/item_image_personaje"
            android:layout_toRightOf="@id/item_image_personaje"
            android:layout_below="@id/item_id_personaje"
            android:textSize="15sp"
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="description: "
            android:textColor="@color/white"
            android:id="@+id/item_description_personaje"
            android:textStyle="bold"
            android:layout_toEndOf="@id/item_image_personaje"
            android:layout_toRightOf="@id/item_image_personaje"
            android:layout_below="@id/item_name_personaje"
            android:textSize="15sp"
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="modified: "
            android:textColor="@color/white"
            android:id="@+id/item_modified_personaje"
            android:textStyle="bold"
            android:layout_toEndOf="@id/item_image_personaje"
            android:layout_toRightOf="@id/item_image_personaje"
            android:layout_below="@id/item_description_personaje"
            android:textSize="15sp"
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="link: "
            android:textColor="@color/white"
            android:id="@+id/item_thumbnail_personaje"
            android:textStyle="bold"
            android:layout_toEndOf="@id/item_image_personaje"
            android:layout_toRightOf="@id/item_image_personaje"
            android:layout_below="@id/item_modified_personaje"
            android:textSize="15sp"
            ></TextView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>